<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="All Test Suite">

    <test name="Nebarex Tests"
          verbose="2"
          preserve-order="true">

        <classes>
            <class name="com.nebarex.automation.tests.TrackingE2ETest">
                <parameter name="Weblink" value="https://dev.nebarex.com/file/tracking/demo-app"></parameter>

                <methods>
                    <include name="getListCards"/>
                    <include name="validatePlateNumber"/>
                    <include name="validateDriverLists"/>
                    <include name="validateLatitudeLists"/>
                    <include name="validateLongitudeLists"/>
                    <include name="validateLocationList"/>
                    <include name="validateLastUpdatedTimesList"/>
                </methods>

            </class>


            <class name="com.nebarex.automation.tests.DemoFormTest">
                <parameter name="Weblink" value="https://dev.nebarex.com/file/tracking/test-form"></parameter>
                <methods>
                    <include name="validateUserForm"/>
                    <include name="validateUserFormWithouAcceptingTermsAndCondition"/>
                </methods>

            </class>
        </classes>

    </test>

</suite>
